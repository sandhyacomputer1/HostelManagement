<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Profile Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_white_rounded"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp"
            android:elevation="6dp">

            <ImageView
                android:id="@+id/ivProfileLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/circle_outline_primary"
                android:padding="8dp"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/tvProfileHostelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostel Name"
                android:textColor="#1A237E"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="12dp" />

        </LinearLayout>


        <!-- DETAILS CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_white_rounded"
            android:orientation="vertical"
            android:padding="22dp"
            android:layout_marginTop="18dp"
            android:elevation="6dp">

            <!-- Email text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#777777"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example@email.com"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E2E2"/>

            <!-- Phone text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="#777777"
                android:textSize="13sp"
                android:layout_marginTop="14dp" />

            <TextView
                android:id="@+id/tvProfilePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9876543210"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
