<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Left: info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvNameRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Name (Room)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <TextView
                android:id="@+id/tvClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:paddingBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvCardTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total: ₹0"
                    android:textSize="13sp"
                    android:textColor="#374151" />

                <TextView
                    android:id="@+id/tvCardPaid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Paid: ₹0"
                    android:textSize="13sp"
                    android:textColor="#16A34A" />

                <TextView
                    android:id="@+id/tvCardRemain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remain: ₹0"
                    android:textSize="13sp"
                    android:textColor="#DC2626"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right: PDF button -->
        <Button
            android:id="@+id/btnStudentPdf"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="PDF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingHorizontal="12dp"
            android:background="@drawable/rounded_button_blue"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
