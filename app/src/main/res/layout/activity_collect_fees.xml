<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F6F8FB">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collect Fees"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tvSubHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Record payments against hostel students"
            android:textSize="13sp"
            android:textColor="#6B7280" />

        <!-- Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical">

            <!-- Student selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textSize="13sp"
                android:textColor="#4B5563"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spStudents"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/rounded_edittext"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No students found. Please add a student first."
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:paddingTop="6dp"
                android:visibility="gone" />

            <!-- Fee summary -->
            <!-- Fee summary -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fee Summary"
                android:textSize="13sp"
                android:textColor="#4B5563"
                android:layout_marginTop="16dp"
                android:paddingBottom="4dp" />

            <!-- Summary row: Total / Paid / Remaining -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Total -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/tvTotalFee"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:text="₹ 0"
                        android:background="@drawable/rounded_edittext"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Paid -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paid"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/tvPaidFee"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:text="₹ 0"
                        android:background="@drawable/rounded_edittext"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Remaining -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remaining"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/tvRemainingFee"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:text="₹ 0"
                        android:background="@drawable/rounded_edittext"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Amount to collect -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount to collect (will reduce Remaining)"
                android:textSize="13sp"
                android:textColor="#4B5563"
                android:layout_marginTop="16dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Enter amount to collect"
                android:background="@drawable/rounded_edittext"
                android:paddingHorizontal="10dp"
                android:inputType="number" />


            <!-- Payment mode -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment mode"
                android:textSize="13sp"
                android:textColor="#4B5563"
                android:layout_marginTop="16dp"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spPaymentType"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/rounded_edittext"
                android:entries="@array/payment_mode" />

            <!-- QR -->
            <ImageView
                android:id="@+id/ivQR"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:src="@drawable/default_qr"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <!-- Remarks -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remarks"
                android:textSize="13sp"
                android:textColor="#4B5563"
                android:layout_marginTop="16dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/etRemarks"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Optional"
                android:background="@drawable/rounded_edittext"
                android:paddingHorizontal="10dp" />

            <!-- Button -->
            <Button
                android:id="@+id/btnCollectFee"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Collect Fee"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
