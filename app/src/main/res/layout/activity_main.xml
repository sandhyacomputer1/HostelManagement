<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- ===================== MAIN CONTENT AREA ===================== -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ===================== TOP TOOLBAR ===================== -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="4dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Dashboard"
                app:titleTextColor="#1F2937"
                app:navigationIcon="@drawable/ic_menu"
                app:navigationIconTint="#2D3748"/>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- ===================== SCROLLABLE DASHBOARD CONTENT ===================== -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/content_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <!-- ===================== WELCOME CARD ===================== -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#5B9FED">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivToolbarLogo"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_foreground"
                            android:contentDescription="logo"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvWelcomeSimple"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome ðŸ‘‹"
                                android:textSize="12sp"
                                android:textColor="#FFFFFF"
                                android:alpha="0.95"/>

                            <TextView
                                android:id="@+id/tvToolbarHostelName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your Hostel"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginTop="2dp"
                                android:maxLines="1"
                                android:ellipsize="end"/>

                            <TextView
                                android:id="@+id/tvCurrentDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="December 11, 2025"
                                android:textSize="11sp"
                                android:textColor="#FFFFFF"
                                android:layout_marginTop="2dp"
                                android:alpha="0.85"/>

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ===================== STATS GRID ===================== -->
                <LinearLayout
                    android:id="@+id/stats_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:layout_marginTop="8dp">

                    <!-- First row: 4 cards -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_marginBottom="8dp">

                        <!-- Total Rooms -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_total_rooms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E8EDF2"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvTotalRooms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="#2D3748"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rooms"
                                    android:textSize="11sp"
                                    android:textColor="#718096"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Total Students -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_total_students"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E8EDF2"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvTotalStudentsDashboard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="#2D3748"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Students"
                                    android:textSize="11sp"
                                    android:textColor="#718096"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Occupied Rooms -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_occupied_rooms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#D1FAE5"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvOccupiedRooms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="#059669"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Occupied"
                                    android:textSize="11sp"
                                    android:textColor="#065F46"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Available Rooms -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_available_rooms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvAvailableRooms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="#D97706"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Available"
                                    android:textSize="11sp"
                                    android:textColor="#92400E"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                </LinearLayout>

                <!-- ===================== FINANCIAL CARDS ===================== -->
                <LinearLayout
                    android:id="@+id/finance_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:layout_marginTop="8dp">

                    <!-- Total Revenue Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_total_revenue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#BBF7D0"
                        app:cardBackgroundColor="#F0FDF4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="14dp"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Revenue"
                                    android:textSize="12sp"
                                    android:textColor="#065F46"/>

                                <TextView
                                    android:id="@+id/tvTotalRevenue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â‚¹ 0"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:textColor="#059669"
                                    android:layout_marginTop="2dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Collected this month"
                                    android:textSize="10sp"
                                    android:textColor="#047857"
                                    android:layout_marginTop="2dp"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’°"
                                android:textSize="30sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Pending Fees Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_pending_fees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#FECACA"
                        app:cardBackgroundColor="#FEF2F2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="14dp"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pending Fees"
                                    android:textSize="12sp"
                                    android:textColor="#991B1B"/>

                                <TextView
                                    android:id="@+id/tvPendingFees"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â‚¹ 0"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:textColor="#DC2626"
                                    android:layout_marginTop="2dp"/>

                                <TextView
                                    android:id="@+id/tvPendingStudents"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 students pending"
                                    android:textSize="10sp"
                                    android:textColor="#B91C1C"
                                    android:layout_marginTop="2dp"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âš ï¸"
                                android:textSize="30sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- ===================== QUICK ACTIONS GRID ===================== -->
                <LinearLayout
                    android:id="@+id/actions_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:layout_marginTop="8dp">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <!-- Add Student -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAddStudent"
                            android:layout_width="0dp"
                            android:layout_height="82dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="âž•"
                                    android:textSize="24sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add Student"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Collect Fees -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardCollectFees"
                            android:layout_width="0dp"
                            android:layout_height="82dp"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ’µ"
                                    android:textSize="24sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Collect Fees"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <!-- Fee History -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardFeeHistory"
                            android:layout_width="0dp"
                            android:layout_height="82dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ“Š"
                                    android:textSize="24sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fee History"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Students List -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardManageRooms"
                            android:layout_width="0dp"
                            android:layout_height="82dp"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ“‹"
                                    android:textSize="24sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Students List"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>

                <!-- bottom spacing -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Optional FAB (bottom-right) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_quick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:src="@drawable/ic_add"
            app:backgroundTint="#3F51B5"
            app:tint="@android:color/white" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- ===================== NAVIGATION DRAWER ===================== -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
