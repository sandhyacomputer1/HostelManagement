<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F5F5F7"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Photo -->
        <ImageView
            android:id="@+id/ivUpdateStudentPhoto"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_user"
            android:background="@drawable/circle_white_bg"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_marginTop="18dp" />

        <!-- Card Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginHorizontal="4dp"
            android:clipToPadding="false">

            <!-- NAME -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textColor="#616161"
                android:textSize="13sp"
                android:layout_marginTop="4dp"/>

            <EditText
                android:id="@+id/etUpdateName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:hint="Enter Student Name"
                android:textColor="#000"
                android:textSize="15sp" />

            <!-- PHONE + CALL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#616161"
                android:textSize="13sp"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etUpdatePhone"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:inputType="phone"
                    android:background="@drawable/rounded_edittext"
                    android:padding="10dp"
                    android:hint="Enter Phone No"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ivCall"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/ic_call"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/circle_white_bg"
                    android:padding="10dp"/>
            </LinearLayout>

            <!-- ROOM -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Number"
                android:textColor="#616161"
                android:textSize="13sp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etUpdateRoom"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:hint="Enter Room"
                android:textColor="#000"
                android:textSize="15sp" />

            <!-- ADDRESS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#616161"
                android:textSize="13sp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etUpdateAddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:hint="Enter Address"
                android:textColor="#000"
                android:textSize="15sp" />

            <!-- PARENT NAME -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parent Name"
                android:textColor="#616161"
                android:textSize="13sp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etUpdateParentName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:hint="Enter Parent Name"
                android:textColor="#000"
                android:textSize="15sp" />

            <!-- PARENT PHONE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parent Phone"
                android:textColor="#616161"
                android:textSize="13sp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etUpdateParentPhone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="phone"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:hint="Enter Parent Phone"
                android:textColor="#000"
                android:textSize="15sp" />

            <!-- CLASS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class"
                android:textColor="#616161"
                android:textSize="13sp"
                android:layout_marginTop="12dp"/>

            <Spinner
                android:id="@+id/spUpdateClass"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_edittext"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:spinnerMode="dropdown" />

            <!-- FEES -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fees"
                android:textColor="#616161"
                android:textSize="13sp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etUpdateFees"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="number"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:hint="Enter Fees"
                android:textColor="#000"
                android:textSize="15sp" />

            <!-- JOINING DATE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joining Date"
                android:textColor="#616161"
                android:textSize="13sp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etUpdateJoiningDate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:focusable="false"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:hint="Select Joining Date"
                android:textColor="#000"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- BUTTON -->
        <Button
            android:id="@+id/btnUpdateStudent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Update Student"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/rounded_button_blue"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</ScrollView>
